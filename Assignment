style.css

/* Apply background color for the entire page */
body {
    background-color: #f2f2f2;
}

/* Style the div with different background color, text color, and padding */
.main-container {
    background-color: #fff;
    color: #333;
    padding: 20px;
}

/* Apply a unique font to the headings */
h1, h2 {
    font-family: 'Arial', sans-serif;
}

/* Add a border around the section elements with rounded corners */
section {
    border: 1px solid #ccc;
    border-radius: 10px;
    padding: 10px;
    margin-bottom: 10px;
}

/* Style the list items inside the skills section with different color on hover */
.skills li:hover {
    color: #ff0000; /* Replace with the desired hover color */
}
